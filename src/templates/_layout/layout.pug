doctype html
html(dir='ltr', lang=config.SEO.seo_lang, itemscope, itemtype="http://schema.org/WebSite", prefix="og: http://ogp.me/ns#", class="no-js", ng-app="fullStackApp", ng-controller="MainController")
	head
		meta(charset='utf-8')
		base(href="/")
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='format-detection', content='telephone=no')
		meta(name='msapplication-tap-highlight', content='no')
		<!-- ////////////// Mobile title color ////////////// -->
		meta(name='theme-color', content=config.SEO.mobile_color)
		meta(name='msapplication-navbutton-color', content=config.SEO.mobile_color)
		meta(name='apple-mobile-web-app-status-bar-style', content=config.SEO.mobile_color)
		title(ng-bind="$state.current.data.pageTitle + ' - ' + settings.name") 
		link(href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&amp;subset=vietnamese" rel="stylesheet")
